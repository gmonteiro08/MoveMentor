<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cinza_claro">

            <ImageView
                android:id="@+id/imageView_categoria"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/background_categorias"
                android:paddingStart="15dp"
                android:paddingTop="16dp"
                android:paddingEnd="15dp"
                android:paddingBottom="33dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/textView_nomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Guilherme Monteiro"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageView_categoria"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@+id/textView_nomeUsuario"
                app:layout_constraintTop_toBottomOf="@+id/textView_nomeUsuario"
                app:srcCompat="@drawable/estrela" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="4"
                android:textColor="@color/laranja"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/textView_nomeUsuario"
                app:layout_constraintTop_toBottomOf="@+id/textView_nomeUsuario" />

            <TextView
                android:id="@+id/textView_descricao"
                android:layout_width="238dp"
                android:layout_height="66dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:text="Serviço de mudanças profissional e confiável para residências e empresas "
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView_nomeUsuario"
                app:layout_constraintTop_toBottomOf="@+id/textView19"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>